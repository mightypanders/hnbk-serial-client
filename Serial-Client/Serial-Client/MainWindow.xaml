<Window x:Class="Serial_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serial_Client"
        mc:Ignorable="d"
        Title="Window1" Height="594" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="201" x:Name="Left">
            </ColumnDefinition>
            <ColumnDefinition x:Name="Right"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbPorts" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="txtDBAdress" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,218,0,0" Text="sven.tech"/>
        <Button x:Name="btnRead" Grid.Column="0" Height="25" Content="Read" VerticalAlignment="Bottom" Click="btnRead_Click"/>
        <Button x:Name="btnOpenPort" Grid.Column="0" Height="25" Content="Open Port" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="btnOpenPort_Click"/>
        <DataGrid x:Name="grDB" Grid.Column="2" ItemsSource="{Binding}"/>
        <Button x:Name="btnTestWerte" Grid.Column="0" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,60" Content="Testwerte generieren" Click="btnTestWerte_Click"/>
        <Button x:Name="btnFillgrid" Grid.Column="0" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,90" Content="Fill Grid" Click="btnFillgrid_Click"/>
        <ComboBox x:Name="cmbParity" HorizontalAlignment="Left" Margin="81,44,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbStop" HorizontalAlignment="Left" Margin="81,75,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Parity" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <Label Content="StopBits" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbHandshake" HorizontalAlignment="Left" Margin="81,106,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Handshake" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Baudrate" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbBaud" HorizontalAlignment="Left" Margin="81,137,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbDatabit" HorizontalAlignment="Left" Margin="81,164,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Databits" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPCName" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,271,0,0"/>
        <Label Content="Rechnername" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top"/>
        <Label Content="Datenbank URL" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPCName_Copy" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,324,0,0"/>
        <Label Content="Rechnername" HorizontalAlignment="Left" Margin="10,297,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
