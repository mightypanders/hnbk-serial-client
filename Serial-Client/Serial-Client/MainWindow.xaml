<Window x:Class="Serial_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serial_Client"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*" x:Name="Left">
            </ColumnDefinition>
            <ColumnDefinition Width="97*" x:Name="Right"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbPorts" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="txtDBAdress" Grid.Column="0" Height="25" VerticalAlignment="Top" Margin="0,40,0,0" Text="sven.tech"/>
        <Button x:Name="btnRead" Grid.Column="0" Height="25" Content="Read" VerticalAlignment="Bottom" Click="btnRead_Click"/>
        <Button x:Name="btnOpenPort" Grid.Column="0" Height="25" Content="Open Port" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
        <DataGrid x:Name="grDB" Grid.Column="2" ItemsSource="{Binding}"/>
        <Button x:Name="btnTestWerte" Grid.Column="0" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,60" Content="Testwerte generieren" Click="btnTestWerte_Click"/>
        <Button x:Name="btnFillgrid" Grid.Column="0" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,90" Content="Fill Grid" Click="btnFillgrid_Click"/>
    </Grid>
</Window>
